{
    "id": "com.panasonic.viera",
    "version": "0.3.2",
    "compatibility": "*",
    "name": {
        "en": "Panasonic Viera SmartTV",
        "nl": "Panasonic Viera SmartTV"
    },
    "description": {
        "en": "Control your Panasonic Viera SmartTV",
        "nl": "Bestuur je Panasonic Viera SmartTV"
    },
    "author": {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
	"drivers": [
        {
            "id": "smarttv",
            "name": {
	        	"en": "Panasonic Viera SmartTV",
	        	"nl": "Panasonic Viera SmartTV"  
            },
            "images": {
              	"large": "drivers/smarttv/assets/images/large.jpg",
			  	"small": "drivers/smarttv/assets/images/small.jpg"
          	},
            "class": "other",
            "capabilities": [],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_tv"
                    }
                },
                {
                    "id": "add_tv",
                    "template": "add_devices"
                }
            ],
            "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "General settings",
                        "nl": "Algemene instellingen"
                    },
                    "children": [
	                    {
	                        "id": "ipaddress",
	                        "type": "text",
	                        "label": {
	                            "en": "IP address",
	                            "nl": "IP adres"
	                        },
	                        "value": "0.0.0.0"
	                    }
	                ]
	            }
	        ]
        }
    ],
    "flow": {
	    "conditions": [
		    {
			    "id": "muted",
			     "title": {
				    "en": "TV !{{is|is not}} muted",
				    "nl": "TV !{{is|is niet}} muted"
			    },
			    "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select SmartTV",
	                  "nl": "Selecteer SmartTV"
	                },
		            "filter": "driver_id=smarttv"
	              }
	            ]
		    },
		    {
			    "id": "isOn",
			     "title": {
				    "en": "TV !{{is|is not}} on",
				    "nl": "TV !{{staat|staat niet}} aan"
			    },
			    "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select SmartTV",
	                  "nl": "Selecteer SmartTV"
	                },
		            "filter": "driver_id=smarttv"
	              }
	            ]
		    }
	    ],
	    "actions": [
	        {
	            "id": "sendcommand",
	            "title": {
	                "en": "Send command",
	                "nl": "Stuur commando"
	            },
	            "args": [
	              {
	                "name": "key",
	                "type": "autocomplete",
	                "placeholder": {
	                  "en": "Key",
	                  "nl": "Toets"
	                 }
	              },
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select SmartTV",
	                  "nl": "Selecteer SmartTV"
	                },
		            "filter": "driver_id=smarttv"
	              }
	            ]
	        },
	        {
	            "id": "setvolume",
	            "title": {
	                "en": "Set volume",
	                "nl": "Stel volume in"
	            },
	            "args": [
	              {
	                "name": "volume",
	                "type": "number",
	                "min": 0,
	                "max": 99,
	                "placeholder": {
	                   "en": "Target volume",
	                   "nl": "Gewenst volume"
	                }
	              },
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select SmartTV",
	                  "nl": "Selecteer SmartTV"
	                },
		            "filter": "driver_id=smarttv"
	              }
	            ]
	        }
	    ]
	}
}